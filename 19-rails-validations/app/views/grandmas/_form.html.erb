<% if flash[:errors] %>
  <% flash[:errors].each do |error_message| %>
    <p>
      <%= error_message %>
    </p>
  <% end %>
<% end %>

<%= form_for @grandma do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :experience %>
  <%= f.number_field :experience %>

  <%= f.submit %>

<% end %>
