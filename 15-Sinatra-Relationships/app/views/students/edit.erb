<h1>Form to Edit <%= @student.name %> </h1>

<form action="/students/<%= @student.id %>" method="POST">

  <input type="hidden" name="_method" value="PATCH">

  <label for="s_name">Name</label>
  <input type="text" name="student[name]" id="s_name" value="<%= @student.name %>"/>

  <label for="s_age">Age</label>
  <input type="number" name="student[age]" id="s_age" value="<%= @student.age %>"/>

  <input type="submit" value="Edit this student"/>

</form>
